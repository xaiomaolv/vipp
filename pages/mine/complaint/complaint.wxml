<!-- 投诉 -->
<view class="container bg-w">
  <view class="mg-tp-15 pd-lr-10">
    <view class="pd-15 bd">
      <textarea data-obj="form.content" value="{{form.content}}" bindinput="bindTextAreaBlur" maxlength='-1'
        style="min-height:100rpx;" placeholder="请填写投诉内容" />
    </view>
  </view>
  <view class='row mg-tp-30 tx-ct'>
    <button type="primary" class="cell-primary" bindtap="handleSubmit">提交</button>
  </view>
</view>